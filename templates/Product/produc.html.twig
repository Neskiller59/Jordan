{% extends 'base.html.twig' %}

{% block title %}Hello CarsController!{% endblock %}

{% block body %}
<h1 class="text-center fs-1 mt-3">Tes pieds méritent l’histoire. Jordan les y mène</h1>

<div class="row justify-content-center">
    {% for model in models %}
        <div class="col-md-4 d-flex justify-content-center mb-4">
            <div class="card" style="width: 18rem;">
                {% if model.image is not empty %}
                    {% if model.image starts with 'http' %}
                        <img src="{{ model.image }}" class="card-img-top" alt="Image de {{ model.name }}">
                    {% else %}
                        <img src="{{ asset('images/brand/' ~ model.image) }}" class="card-img-top" alt="Image de {{ model.name }}">
                    {% endif %}
                {% else %}
                    <div class="card-img-top d-flex align-items-center justify-content-center" style="height:180px; background:#eee; color:#888;">
                        Image non disponible
                    </div>
                {% endif %}
                <div class="card-body text-center">
                    <h2 class="card-title">{{ model.name }}</h2>
                    <h5>Prix : {{ model.prix }} €</h5>
                </div>
            </div>
        </div>
    {% else %}
        <p class="text-center">Aucun modèle disponible.</p>
    {% endfor %}
</div>

<div class="d-flex justify-content-center mt-4">
    {{ knp_pagination_render(models) }}
</div>
{% endblock %}
